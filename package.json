{
  "name": "scort-web-site",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "pnpm run build:backend && pnpm run build:frontend",
    "build:backend": "cd backend && pnpm run build:prod",
    "build:frontend": "cd frontend && pnpm run build",
    "start": "pnpm run start:backend",
    "start:backend": "cd backend && pnpm run start:prod",
    "start:frontend": "cd frontend && pnpm run start",
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
    "dev:backend": "cd backend && pnpm run dev",
    "dev:frontend": "cd frontend && pnpm run dev",
    "install:all": "pnpm install && cd backend && pnpm install && cd ../frontend && pnpm install",
    "clean": "cd backend && pnpm run clean && cd ../frontend && rm -rf .next",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "concurrently": "^9.1.0"
  },
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad"
}
