# Configuración de producción para el backend

# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/scort-web-site?retryWrites=true&w=majority
PORT=5000

# Environment Configuration
NODE_ENV=production
ENVIRONMENT=production

# CORS Configuration
ORIGIN_ALLOWED=["https://yourdomain.com","https://www.yourdomain.com"]

# Mailjet Configuration
MJ_APIKEY_PUBLIC=your_production_mailjet_public_api_key
MJ_APIKEY_PRIVATE=your_production_mailjet_private_api_key
MJ_API_TOKEN=your_production_mailjet_api_token

# Email Configuration
EMAIL_SENDER=noreply@yourdomain.com
APP_NAME=Scort Web Site

# Security Configuration
JWT_SECRET=your_production_jwt_secret_key_here
SESSION_SECRET=your_production_session_secret_here

# Performance Configuration
MAX_POOL_SIZE=10
SERVER_TIMEOUT=30000

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
LOG_DIR=/app/logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem