{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "strict": false,
        "noEmitOnError": false,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": false,
        "removeComments": true,
        "sourceMap": false
    },
    "include": [
        "src/**/*",
        "types/**/*.d.ts",
        "src/types"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ]
}