# Configuración específica para Render
NODE_ENV=production
PORT=5000

# Base de datos MongoDB (se configurará automáticamente por Render)
MONGO_URI=mongodb://scort-app:password@mongodb:27017/scort-web-site?authSource=scort-web-site

# JWT y autenticación
JWT_SECRET=your-super-secret-jwt-key-for-production
JWT_EXPIRES_IN=24h

# CORS
CORS_ORIGIN=https://scort-web-site.vercel.app

# Email (Mailjet)
MAILJET_API_KEY=your-mailjet-api-key
MAILJET_SECRET_KEY=your-mailjet-secret-key
EMAIL_FROM=noreply@scort-web-site.com
EMAIL_FROM_NAME=Scort Web Site

# URLs y configuraciones
FRONTEND_URL=https://scort-web-site.vercel.app
BACKEND_URL=https://scort-backend.onrender.com

# Configuraciones de seguridad
SESSION_SECRET=your-session-secret-key
ENCRYPTION_KEY=your-encryption-key

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Features flags
FEATURE_VISIBILITY_ENGINE=true
FEATURE_PAYMENT_SYSTEM=true
FEATURE_EMAIL_NOTIFICATIONS=true