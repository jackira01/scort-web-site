{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "noEmit": true,
        "incremental": true,
        "tsBuildInfoFile": ".next/tsconfig.app.tsbuildinfo"
    },
    "include": [
        "next-env.d.ts",
        "src/**/*",
        "app/**/*",
        "types/**/*.d.ts",
        "middleware.ts"
    ],
    "exclude": [
        "node_modules",
        ".next",
        "dist",
        "../backend/**/*"
    ]
}