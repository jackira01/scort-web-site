# Configuración de producción para el frontend

# API Configuration
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# Cloudinary Configuration
NEXT_PUBLIC_CLOUDINARY_API_KEY="your_production_cloudinary_api_key"
CLOUDINARY_API_SECRET="your_production_cloudinary_api_secret"
NEXT_PUBLIC_CLOUDINARY_NAME=your_production_cloudinary_name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your_production_cloudinary_upload_preset

# Authentication
AUTH_SECRET=your_production_auth_secret
AUTH_GOOGLE_ID=your_production_google_id
AUTH_GOOGLE_SECRET=your_production_google_secret

# Environment
NODE_ENV=production
NEXT_PUBLIC_ENV=production

# Performance
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true

# Security
NEXT_PUBLIC_ENABLE_CSP=true
NEXT_PUBLIC_SECURE_COOKIES=true